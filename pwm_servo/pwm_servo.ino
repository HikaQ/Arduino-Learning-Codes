void setup()
{
  // 设置LEDC通道3：频率为50Hz（舵机标准频率），分辨率为10位
  ledcSetup(3, 50, 10);
  // 将GPIO引脚13连接到LEDC通道3
  ledcAttachPin(13, 3);
}

void loop()
{
  // 0~180°之间，任意角度对应的占空比 = 0.025 + 角度值/180*(0.125-0.025)
  // 设置舵机角度为0度（对应2.5%占空比，约0.5ms脉冲宽度）
  ledcWrite(3, 25); /* 转到0度 1024*2.5% */
  delay(1000); // 等待1秒
  // 设置舵机角度为45度（对应5%占空比，约1.0ms脉冲宽度）
  ledcWrite(3, 50); /* 转到45度 1024*5% */
  delay(1000); // 等待1秒
  // 设置舵机角度为90度（对应7.5%占空比，约1.5ms脉冲宽度）
  ledcWrite(3, 75); /* 转到90度 1024*7.5% */
  delay(1000); // 等待1秒
  // 设置舵机角度为135度（对应约9.8%占空比，约2.0ms脉冲宽度）
  ledcWrite(3, 100); /* 转到135度  */
  delay(1000); // 等待1秒
  // 设置舵机角度为180度（对应约12.2%占空比，约2.5ms脉冲宽度）
  ledcWrite(3, 125); /* 转到180度  */
  delay(1000); // 等待1秒
  // 返回到135度位置
  ledcWrite(3, 100); /* 转到135度  */
  delay(1000); // 等待1秒
  // 返回到90度位置
  ledcWrite(3, 75); /* 转到90度 1024*7.5% */
  delay(1000); // 等待1秒
  // 返回到45度位置
  ledcWrite(3, 50); /* 转到45度 1024*5% */
  delay(1000); // 等待1秒
}